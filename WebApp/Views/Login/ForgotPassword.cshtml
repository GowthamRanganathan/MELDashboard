@model BusinessLayer.Models.Login.UserLogin

@{
    ViewData["Title"] = "ForgotPassword";
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login page</title>
</head>

<body>

    <div class="container-fluid" style="padding: 0;">

        <div class="col-lg-12">
            <div class="row">

                <!-- banner section -->
                <div class="col-lg-8 banner-image">
                    <div class="d-flex justify-content-center rectangle-5184">
                        <img src="~/img/logo.svg">
                    </div>
                    <img class="banner-image" src="~/img/Image20210707112926.png">
                </div>
                <!-- END banner section -->
                <!-- login section -->
                <div class="col-lg-4 login-section">
                    <div class="text-center">
                        <img class="mel-dash-logo" src="~/img/MEL dash logo.svg">
                    </div>
                    <div class="login">
                        <div class="login-welcome-items">
                            <b>Forgot password</b>
                            <p>We will email the password to your email address.</p>
                        </div>
                        <form class="form-control form-items-wrapper" method="post" asp-controller="Login" asp-action="ForgotPassword">
                            <div class="form-group">
                                <label  asp-for="UserName" for="exampleInputEmail1">Email</label>
                                <input  asp-for="UserName" type="text" class="form-control mel-text-input" placeholder="" method="POST">
                            </div>
                            <div class="send-cancel flex-container">
                                <button type="submit" class="btn mel-primay-button">Send</button>
                                <a href="#">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- END login section -->
    </div>



